---
// Icon-park-twotone
const { title, author, reviewId, myRating, nPages, publisher, genres } =
  Astro.props;
---

<section
  class='not-prose grid gap-2 rounded-xl border-4 border-foreground/10 p-2 md:grid-cols-3'
>
  <div
    class='grid grid-cols-[auto_1fr] content-between items-center gap-3 p-1 text-xl md:col-span-2 md:gap-4 md:p-2 md:text-3xl'
  >
    <svg
      class='h-7 w-7 text-primary'
      xmlns='http://www.w3.org/2000/svg'
      width='1em'
      height='1em'
      viewBox='0 0 48 48'
      ><defs
        ><mask id='ipTBookOne0'
          ><g fill='none' stroke='#fff' stroke-linejoin='round' stroke-width='4'
            ><path
              fill='#555'
              d='M7 37V11a6 6 0 0 1 6-6h22v26H13c-3.3 0-6 2.684-6 6Z'
            ></path><path
              stroke-linecap='round'
              d='M35 31H13a6 6 0 0 0 0 12h28V7M14 37h20'></path></g
          ></mask
        ></defs
      ><path fill='currentColor' d='M0 0h48v48H0z' mask='url(#ipTBookOne0)'
      ></path></svg
    >
    <p class='font-semibold'>
      {title}
    </p>

    <svg
      class='h-7 w-7 text-primary'
      xmlns='http://www.w3.org/2000/svg'
      width='1em'
      height='1em'
      viewBox='0 0 48 48'
      ><defs
        ><mask id='ipTAvatar0'
          ><path
            fill='#555'
            stroke='#fff'
            stroke-linejoin='round'
            stroke-width='4'
            d='M5.004 42.231a.78.78 0 0 0 .791.769h36.407a.78.78 0 0 0 .792-.769v-.918c.018-.277.055-1.657-.855-3.184c-.574-.963-1.407-1.794-2.476-2.472c-1.293-.82-2.938-1.413-4.928-1.77a29.236 29.236 0 0 1-3.002-.584c-2.632-.672-2.862-1.267-2.864-1.273a.763.763 0 0 0-.066-.169c-.022-.11-.075-.528.027-1.647c.258-2.843 1.783-4.523 3.008-5.873c.386-.425.751-.828 1.032-1.222c1.213-1.7 1.325-3.635 1.33-3.755a2 2 0 0 0-.087-.628c-.12-.37-.343-.6-.507-.77a2.874 2.874 0 0 1-.113-.12c-.012-.014-.044-.052-.015-.243a19.01 19.01 0 0 0 .203-1.857c.056-1.002.099-2.5-.16-3.959a6.031 6.031 0 0 0-.172-.825c-.273-1.004-.711-1.862-1.32-2.57c-.105-.115-2.653-2.8-10.05-3.35c-1.023-.076-2.034-.035-3.03.016a4.39 4.39 0 0 0-.875.108c-.764.197-.968.681-1.021.952c-.089.45.067.798.17 1.03c.015.033.034.074.001.182c-.171.266-.442.506-.717.733c-.08.067-1.934 1.667-2.036 3.756c-.275 1.589-.255 4.064.07 5.775c.02.095.047.235.002.33c-.35.313-.746.668-.745 1.478c.004.082.117 2.016 1.33 3.717c.28.394.645.796 1.03 1.221l.002.001c1.225 1.35 2.75 3.03 3.008 5.872c.101 1.12.048 1.537.027 1.648a.758.758 0 0 0-.067.169c-.001.006-.23.599-2.85 1.27c-1.512.387-3 .585-3.045.59c-1.934.327-3.569.906-4.86 1.721c-1.065.673-1.9 1.507-2.48 2.477c-.928 1.55-.903 2.962-.89 3.22z'
          ></path></mask
        ></defs
      ><path fill='currentColor' d='M0 0h48v48H0z' mask='url(#ipTAvatar0)'
      ></path></svg
    >
    <p class='font-semibold'>
      {author}
    </p>

    <svg
      class='h-7 w-7 text-primary'
      xmlns='http://www.w3.org/2000/svg'
      width='1em'
      height='1em'
      viewBox='0 0 48 48'
      ><defs
        ><mask id='ipTBuildingFour0'
          ><g
            fill='none'
            stroke='#fff'
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='4'
            ><path
              fill='#555'
              fill-rule='evenodd'
              d='m17 14l27 10v20H17z'
              clip-rule='evenodd'></path><path
              d='M17 14L4 24v20h13m18 0V32l-9-3v15m18 0H17'></path></g
          ></mask
        ></defs
      ><path fill='currentColor' d='M0 0h48v48H0z' mask='url(#ipTBuildingFour0)'
      ></path></svg
    >
    <p>
      {publisher}
    </p>

    <svg
      class='h-7 w-7 text-primary'
      xmlns='http://www.w3.org/2000/svg'
      width='1em'
      height='1em'
      viewBox='0 0 48 48'
      ><defs
        ><mask id='ipTFileHash0'
          ><g
            fill='none'
            stroke='#fff'
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='4'
            ><path
              fill='#555'
              d='M10 44h28a2 2 0 0 0 2-2V14H30V4H10a2 2 0 0 0-2 2v36a2 2 0 0 0 2 2'
            ></path><path d='m30 4l10 10M17 25h14m-14 6h14M21 21v14m6-14v14'
            ></path></g
          ></mask
        ></defs
      ><path fill='currentColor' d='M0 0h48v48H0z' mask='url(#ipTFileHash0)'
      ></path></svg
    >
    <p>
      {nPages} صفحة
    </p>

    <svg
      class='h-7 w-7 text-primary'
      xmlns='http://www.w3.org/2000/svg'
      width='1em'
      height='1em'
      viewBox='0 0 48 48'
      ><defs
        ><mask id='ipTStar0'
          ><path
            fill='#555'
            stroke='#fff'
            stroke-linejoin='round'
            stroke-width='4'
            d='m23.999 5l-6.113 12.478L4 19.49l10.059 9.834L11.654 43L24 36.42L36.345 43L33.96 29.325L44 19.491l-13.809-2.013z'
          ></path></mask
        ></defs
      ><path fill='currentColor' d='M0 0h48v48H0z' mask='url(#ipTStar0)'
      ></path></svg
    >
    <p dir='ltr' class='text-right'>
      {myRating}
    </p>

    {
      reviewId && (
        <>
          <svg
            class='h-7 w-7 text-primary'
            xmlns='http://www.w3.org/2000/svg'
            width='1em'
            height='1em'
            viewBox='0 0 256 256'
          >
            <g fill='currentColor'>
              <>
                <path
                  d='M184 88v24a56 56 0 0 1-112 0V88a56 56 0 0 1 112 0'
                  opacity='.2'
                />
                <path d='M184 24a8 8 0 0 0-8 8v13.74A64 64 0 0 0 64 88v24a64 64 0 0 0 112 42.26V168a48.05 48.05 0 0 1-48 48c-16.45 0-32.72-8.08-41.44-20.58a8 8 0 1 0-13.12 9.16C85.06 221.24 106.48 232 128 232a64.07 64.07 0 0 0 64-64V32a8 8 0 0 0-8-8m-56 136a48.05 48.05 0 0 1-48-48V88a48 48 0 0 1 96 0v24a48.05 48.05 0 0 1-48 48' />
              </>
            </g>
          </svg>
          <a
            class='flex items-center gap-1'
            target='_blank'
            href={`https://www.goodreads.com/review/show/${reviewId}`}
          >
            مراجعتي للكتاب
            <svg
              class='-scale-x-100'
              xmlns='http://www.w3.org/2000/svg'
              width='1em'
              height='1em'
              viewBox='0 0 24 24'
            >
              <path
                fill='#888888'
                d='M6 6v2h8.59L5 17.59L6.41 19L16 9.41V18h2V6z'
              />
            </svg>
          </a>
        </>
      )
    }

    <svg
      class='h-7 w-7 text-primary'
      xmlns='http://www.w3.org/2000/svg'
      width='1em'
      height='1em'
      viewBox='0 0 48 48'
      ><defs
        ><mask id='ipTLayers0'
          ><g fill='none' stroke='#fff' stroke-linejoin='round' stroke-width='4'
            ><path fill='#555' d='M4 11.914L24 19l20-7.086L24 5z'></path><path
              stroke-linecap='round'
              d='m4 20l20 7l20-7M4 28l20 7l20-7M4 36l20 7l20-7'></path></g
          ></mask
        ></defs
      ><path fill='currentColor' d='M0 0h48v48H0z' mask='url(#ipTLayers0)'
      ></path></svg
    >
    <p class='flex flex-wrap items-center gap-2 text-xl'>
      {
        genres?.map((genre) => (
          <span class='inline-block rounded-xl bg-accent px-2 py-1 text-background'>
            {genre}
          </span>
        ))
      }
    </p>
  </div>

  <div
    class='image-wrapper relative -order-1 overflow-clip rounded-lg object-cover md:order-none md:scale-110 md:rounded-xl'
  >
    <slot />
  </div>
</section>
