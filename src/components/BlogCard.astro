---
import { Icon } from 'astro-icon';
import { CollectionEntry } from 'astro:content';
import { formatDate } from '../utils/utils';
const { slug, data: post } = Astro.props as CollectionEntry<'blog'>;
---

<li class='col-span-2 rounded-xl bg-brand-bg-dark p-3 sm:col-span-1'>
  <h2 class='w-full text-2xl font-semibold hover:text-brand-accent-cyan'>
    <a class='flex items-center justify-between' href={`/blog/${slug}`}>
      {post.title}
      <Icon name='bi:caret-right' size={20} />
    </a>
  </h2>
  {
    post.categories && (
      <section
        class='my-2 flex flex-wrap gap-2'
        aria-label='Blogpost categories'
      >
        {post.categories.sort().map((category) => (
          <span class='inline-block rounded-lg bg-brand-accent-cyan px-2 py-1 text-sm font-semibold text-brand-bg-dark'>
            {category}
          </span>
        ))}
      </section>
    )
  }
  {
    post.date && (
      <date>
        <a tabindex='-1' href={`/blog/${slug}`}>
          {formatDate(post.date)}
        </a>
      </date>
    )
  }
</li>
