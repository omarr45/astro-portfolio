---
import { Icon } from 'astro-icon';
import Tag from './ui/Tag.astro';
const { data, slug } = Astro.props;
---

<li
  class='bg-foreground/5 focus-within:text-accent hover:text-accent focus-within:outline-accent rounded-2xl p-4 outline outline-transparent transition-colors focus-within:outline-4'
>
  <a
    href={data ? `/blog/${slug}` : '/blog/'}
    class='flex items-start justify-between font-medium focus:outline-none'
  >
    {
      data ? (
        <div class='space-y-2'>
          <h3 class='text-2xl font-semibold md:text-3xl'>{data.title}</h3>
          <div class='flex flex-wrap gap-2'>
            {data.categories.sort().map((category: String) => (
              <Tag>{category}</Tag>
            ))}
          </div>
          <date class='block'>{data.date}</date>
        </div>
      ) : (
        <div>
          <h3 class='text-2xl font-semibold md:text-3xl'>All Blog Posts</h3>
        </div>
      )
    }
    <Icon name='bi:caret-right' class='text-primary mt-2' size={25} />
  </a>
</li>
