---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import image404 from '../assets/404.svg';
import Button from '../components/ui/Button.astro';
---

<Layout title='404 Not Found | Omar45'>
  <section class='w-full space-y-6 py-6 text-center'>
    <Image src={image404} width={550} alt='404 Not Found' class='mx-auto' />
    <h1 class='sr-only'>404 Page Not Found</h1>
    <h2
      class='text-xl font-semibold leading-relaxed [text-wrap:balance] sm:text-2xl md:text-3xl md:leading-[1.7]'
    >
      This webpage is just taking a brief break from being in the spotlight.
      While it recharges,
    </h2>
    <section
      class='text-foreground flex items-center justify-center gap-4 text-lg leading-tight sm:text-xl'
    >
      <Button path='/'>Go Back Home</Button>
      <Button path='/blog' secondary>Check My Blog</Button>
    </section>
  </section>
</Layout>
